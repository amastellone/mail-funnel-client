</nav>

<div class="container">
	
	<div class="col-xs-12">
		
		<legend>
			<h1>Campaign Jobs: <%= @campaign.name %></h1>
		</legend>
		
		<div class="col-xs-12">
			<%= render 'email_list_select', collection: @lists %>
			
			<table class="table table-striped">
				
				<tr class="active">
					<th><h4>Job Name</h4></th>
					<th><h4>Hook</h4></th>
					<th></th>
				</tr>
				
				<tbody>
				<% @jobs.each do |c| %>
						<tr>
							<td style="width:85%;">
								<h6><%= c.name %></h6>
							</td>
							<td>
								<h6>
									
								</h6>
							</td>
							<td>
								<a href="<%= root_url %>jobs/<%= c.id %>" class="btn btn-primary btn-block">View></a>
							</td>
						</tr>
				<% end %>
				</tbody>
			
			</table>
			
			<br>
		
		</div>
	
	
	</div>
</div>